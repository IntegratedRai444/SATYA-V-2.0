# ============================================
# PRODUCTION ENVIRONMENT VARIABLES
# ============================================
# IMPORTANT: Replace all placeholder values with actual production values
# DO NOT commit this file to version control
# ============================================

# Environment
NODE_ENV=production

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/satyaai_prod

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Authentication
JWT_SECRET=your-super-secure-jwt-secret-min-32-chars
JWT_EXPIRES_IN=7d
SESSION_SECRET=your-super-secure-session-secret-min-32-chars
COOKIE_SECRET=your-super-secure-cookie-secret

# Python AI Service
PYTHON_SERVICE_URL=http://localhost:5001
PYTHON_SERVICE_TIMEOUT=300000

# OpenAI API (for AI Assistant)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4

# Supabase (if using)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# File Upload
MAX_FILE_SIZE=104857600
UPLOAD_DIR=./uploads

# Security
CORS_ORIGIN=https://yourdomain.com
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
CSRF_ENABLED=true

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn
ENABLE_METRICS=true

# Email (if using)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@satyaai.com

# Frontend URL
CLIENT_URL=https://yourdomain.com

# API Keys (if needed)
ANTHROPIC_API_KEY=your-anthropic-key

# Database Pool
DB_POOL_MIN=2
DB_POOL_MAX=10

# Performance
ENABLE_COMPRESSION=true
ENABLE_CACHE=true
CACHE_TTL=3600

# Feature Flags
ENABLE_BATCH_PROCESSING=true
ENABLE_WEBSOCKET=true
ENABLE_AI_ASSISTANT=true
