# SatyaAI Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================================================
# REQUIRED - Application will not start without these
# ============================================================================

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Database Connection (PostgreSQL via Supabase)
# Use connection pooler for better reliability
DATABASE_URL=postgresql://postgres.[ref]:[password]@[region].pooler.supabase.com:6543/postgres?pgbouncer=true

# JWT Authentication
JWT_SECRET=generate_a_secure_random_string_here
JWT_SECRET_KEY=generate_another_secure_random_string_here
JWT_EXPIRES_IN=24h

# Session Management
SESSION_SECRET=generate_a_secure_session_secret_here

# Flask/Python Server
FLASK_SECRET_KEY=generate_a_secure_flask_secret_here

# ============================================================================
# OPTIONAL - Has sensible defaults
# ============================================================================

# Server Configuration
NODE_ENV=development
PORT=3000
FLASK_HOST=0.0.0.0
FLASK_ENV=development

# Python AI Server
PYTHON_API_URL=http://localhost:5001

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# Redis (Optional - for production caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# OpenAI Configuration (for AI Assistant feature)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=2000

# File Upload Configuration
MAX_FILE_SIZE=104857600

# Detection Configuration
CONFIDENCE_THRESHOLD=0.7
FACE_DETECTION_THRESHOLD=0.8

# Performance Configuration
BATCH_SIZE=8
NUM_WORKERS=4
CACHE_SIZE=1000

# Logging
LOG_LEVEL=INFO

# ============================================================================
# SECURITY NOTES
# ============================================================================
# 
# 1. Generate secure random strings for secrets:
#    - Linux/Mac: openssl rand -hex 32
#    - Node.js: require('crypto').randomBytes(32).toString('hex')
#
# 2. Never use default or weak secrets in production
#
# 3. Keep .env file secure and never commit to git
#
# 4. Use different secrets for development and production
#
# 5. Rotate secrets regularly in production
#
# ============================================================================


# Redis Configuration (Optional - for caching)
ENABLE_REDIS=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=satyaai:

# Error Tracking (Sentry)
ENABLE_ERROR_TRACKING=false
SENTRY_DSN=
SENTRY_SAMPLE_RATE=1.0
SENTRY_TRACES_SAMPLE_RATE=0.1
