# =====================
# SatyaAI Environment Configuration Template
# =====================
# Copy this file to .env and fill in your actual values

# =====================
# Core Configuration
# =====================
NODE_ENV=development
ENVIRONMENT=development
DEBUG=true

# =====================
# Security Configuration - CRITICAL
# =====================
# Generate secure secrets with:
# Node.js: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# OpenSSL: openssl rand -hex 64
JWT_SECRET=your_secure_random_hex_secret_here_minimum_64_characters
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=30d

# =====================
# Supabase Configuration
# =====================
# Get these from your Supabase project dashboard
# Frontend uses VITE_ prefix for Vite to expose these variables
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
# Backend uses regular names
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret-key

# =====================
# Database Configuration
# =====================
DATABASE_URL=postgresql://user:password@localhost:5432/yourdb
USE_SUPABASE_CLIENT=true

# =====================
# Frontend Configuration (Vite)
# =====================
VITE_API_URL=http://localhost:5001
VITE_AUTH_API_URL=http://localhost:5001
VITE_ANALYSIS_API_URL=http://localhost:5001
VITE_WS_URL=ws://localhost:5001

# =====================
# Backend Configuration
# =====================
# Node.js Server
PORT=5001
HOST=0.0.0.0

# Python Server
PYTHON_API_URL=http://localhost:8000
PYTHON_PORT=8000
PYTHON_TIMEOUT=300000

# =====================
# Database Configuration
# =====================
# PostgreSQL connection string (if not using Supabase)
DATABASE_URL=postgresql://user:password@localhost:5432/satyaai

# =====================
# Security Configuration
# =====================
# Generate secure secrets for production
JWT_SECRET=jwt-secret-key-set-in-env
SESSION_SECRET=session-secret-key-set-in-env
CSRF_SECRET=csrf-secret-key-set-in-env

# =====================
# File Upload Configuration
# =====================
MAX_FILE_SIZE=52428800  # 50MB
UPLOAD_DIR=./uploads

# =====================
# Rate Limiting
# =====================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# =====================
# CORS Configuration
# =====================
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# =====================
# Logging Configuration
# =====================
LOG_LEVEL=info
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =====================
# Optional: External Services
# =====================
# OpenAI API (for chat features)
OPENAI_API_KEY=your-openai-api-key

# Redis (for caching)
REDIS_URL=redis://localhost:6379/0

# Sentry (for error monitoring)
# SENTRY_DSN=your-sentry-dsn
# SENTRY_AUTH_TOKEN=your-sentry-auth-token

# =====================
# Feature Flags
# =====================
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=false
VITE_ENABLE_ML_MODELS=true

# ML Model Configuration
ENABLE_ML_MODELS=true
ENABLE_ADVANCED_MODELS=true
ENABLE_ML_OPTIMIZATION=true
STRICT_MODE_ENABLED=true

# =====================
# ML Model Optimization
# =====================
ENABLE_MODEL_OPTIMIZATION=false
MODEL_OPTIMIZATION_LEVEL=performance  # Options: performance, balanced, accuracy
FINE_TUNING_ENABLED=false
CUSTOM_MODEL_PATH=./models/custom

# =====================
# Development Only
# =====================
# Enable WebSockets
ENABLE_WEBSOCKETS=true

# Enable development tools
ENABLE_DEV_TOOLS=true

# Hot reload
HOT_RELOAD=true

ENABLE_MULTIMODAL_FUSION=true
ENABLE_FORENSIC_ANALYSIS=true
ENABLE_MODEL_EXPLAINABILITY=true