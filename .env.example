# SatyaAI Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# =====================
# Core Configuration
# =====================
# Environment: development, staging, production
NODE_ENV=development

# Server port
PORT=8000

# Server host binding
HOST=0.0.0.0

# Environment type (development/staging/production)
ENVIRONMENT=development

# =====================
# API Configuration (v2)
# =====================
# Frontend API base URL (required for client-side)
# Must include /api/v2 prefix
VITE_API_URL=http://localhost:8000/api/v2

# Backend API base URL (required for server-side)
# Should not include /api/v2 suffix
API_BASE_URL=http://localhost:8000

# WebSocket Configuration
VITE_WS_URL=ws://localhost:8000/ws

# =====================
# Security Configuration
# =====================
# Generate with: openssl rand -hex 32
JWT_SECRET=your_secure_jwt_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=30d

# =====================
# CORS Configuration
# =====================
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Allowed HTTP methods
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS

# Allow credentials (cookies, authorization headers)
CORS_CREDENTIALS=true

# =====================
# Database Configuration
# =====================
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/satyaai

# =====================
# File Uploads
# =====================
# Directory to store uploaded files
UPLOAD_DIR=./uploads

# Maximum file size in bytes (100MB)
MAX_FILE_SIZE=104857600

# Allowed MIME types for uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,video/mp4,video/webm,audio/mpeg,audio/wav

# =====================
# Logging
# =====================
# Log level: error, warn, info, debug, trace
LOG_LEVEL=debug

# Log format: combined, common, dev, short, tiny
LOG_FORMAT=dev

# =====================
# Security Notes
# =====================
# 1. Generate secure random strings for secrets:
#    - Linux/Mac: openssl rand -hex 32
#    - Node.js: require('crypto').randomBytes(32).toString('hex')
#
# 2. Never use default or weak secrets in production
#
# 3. Keep .env file secure and never commit to git
#
# 4. Use different secrets for development and production
#
# 5. Rotate secrets regularly in production
