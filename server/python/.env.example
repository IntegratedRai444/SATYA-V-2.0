# =====================
# Core Configuration
# =====================
PYTHON_ENV=development
HOST=0.0.0.0
PORT=8000
DEBUG=true

# =====================
# Security Configuration - CRITICAL
# =====================
# Generate strong secrets with:
# Python: python -c "import secrets; print(secrets.token_urlsafe(48))"
# OpenSSL: openssl rand -hex 32
SECRET_KEY=your_secure_base64_secret_here_minimum_48_characters
JWT_SECRET=your_secure_hex_secret_here_minimum_64_characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours
REFRESH_TOKEN_EXPIRES_IN=30
REFRESH_TOKEN_DAYS=7

# =====================
# Supabase Configuration
# =====================
SUPABASE_URL=supabase-url-set-in-env
SUPABASE_KEY=supabase-anon-key-set-in-env
SUPABASE_JWT_SECRET=supabase-jwt-secret-set-in-env

# =====================
# Database Configuration
# =====================
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/yourdb

# Connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =====================
# File Uploads
# =====================
UPLOAD_FOLDER=./uploads
MAX_CONTENT_LENGTH=104857600  # 100MB
ALLOWED_EXTENSIONS=image/jpeg,image/png,image/webp,video/mp4,video/webm

# =====================
# AI Model Configuration
# =====================
MODEL_NAME=dima806/deepfake_vs_real_image_detection
MODEL_PRECISION=fp16
MAX_IMAGE_SIZE=1024
BATCH_SIZE=8
CONFIDENCE_THRESHOLD=0.75

# =====================
# GPU Configuration
# =====================
USE_GPU=True
GPU_MEMORY_FRACTION=0.9

# =====================
# Processing Configuration
# =====================
MAX_WORKERS=4
REQUEST_TIMEOUT=60  # seconds

# =====================
# CORS Configuration
# =====================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =====================
# Logging
# =====================
LOG_LEVEL=INFO
LOG_FILE=app.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ML Configuration
ENABLE_GPU=true
MODEL_PATH=models/
CONFIDENCE_THRESHOLD=0.7

# External Services (Optional)
OPENAI_API_KEY=
SUPABASE_URL=
SUPABASE_KEY=
